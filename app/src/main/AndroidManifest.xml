<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wanderlust">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".BookingActivity"></activity>
        <activity android:name=".PermissionsActivity" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".CityMap"
            android:label="@string/title_activity_city_map" />
        <activity
            android:name=".Nearby"
            android:label="@string/title_activity_nearby" />
        <activity android:theme="@style/AppTheme.NoActionBar" android:name=".CityActivity" />
        <activity android:name=".Destination" />
        <activity android:name=".Funfacts" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UtilityActivity"
            android:label="Utility" />
        <activity
            android:name=".CompassActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChecklistActivity"
            android:label="Checklist" />
        <activity
            android:name=".WeatherActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WorldClockActivity"
            android:label="World Clock" />
        <activity android:name=".DisplaySQLiteDataActivity"/>
        <activity android:name=".TripActivity"/>
        <activity android:name=".ShowSingleRecordActivity"/>
        <activity android:name=".EditSingleRecordActivity"/>
    </application>

</manifest>